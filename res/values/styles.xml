<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

   <style name="my_style" parent="android:Theme">
	<item name="android:textColor">#000000</item>
	<item name="android:textSize">@dimen/textSize</item>
	<item name="android:background">@color/color4</item>
        <item name="android:typeface">sans</item>
        <item name="android:windowNoTitle">true</item>
      
    </style>
    
   
   <style name="my_spinner_style" parent="android:drawable/btn_dropdown">
       
       <item name="android:drawSelectorOnTop">true</item>
          <item name="android:layout_width">match_parent</item>
   <item name="android:layout_height"> match_parent </item>
   <item name="android:popupBackground">@color/color3</item>


       
   </style>
   
   
  <style name="my_seekbar_style" > 
   <item name="android:layout_width">fill_parent</item>
   <item name="android:layout_height"> wrap_content </item>
   <item name="android:layout_marginTop">3dp </item>
   <item name="android:max">200 </item>
   <item name="android:maxHeight">3dp </item>
   <item name="android:paddingLeft">10dp </item>
    <item name="android:paddingRight">10dp </item>
    <item name="android:progress">100 </item>
   <item name="android:progressDrawable">@color/color2</item><!-- @drawable/slider_progress  -->
   <item name="android:thumb">@drawable/bar_logo</item><!-- @drawable/thumb_img -->

         
      </style>
           
           
           <style name="tapDropRateButton_style" parent="myButton">
  
                       <item name="android:layout_width">match_parent</item>
                       <item name="android:layout_height">match_parent</item>
                       <item name="android:background">@color/color2</item>
                   
                    <item name="android:layout_margin">@dimen/tapDropRateButton_margin</item> 
            
                 
           </style>
           
            <style name="tapDropRateTextView_style" parent="myTextView"> 
                        <item name="android:shadowColor">@color/color1</item>
         
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
              <item name="android:textSize">@dimen/TapDropRateTextviewTextSize</item>
                
            </style>
 
           
        <style name="myButton" parent="@style/my_style">
             <item name="android:background">@color/color3</item>
             
              <item name="android:gravity">center_vertical|center_horizontal</item>
              <item name="android:height">@dimen/button_height</item>
              <item name="android:width">@dimen/button_width</item>
        
        <item name="android:shadowColor">@color/color1</item>
         
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
              <item name="android:textSize">@dimen/buttonTextSize</item>
     
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
         
             
 
 </style>

 
         
            <style name="myTextView" parent="@style/my_style"> 
                <item name="android:background">@color/transparent</item>
                <item name="android:textColor">@color/color3</item>
                <item name="android:textSize">@dimen/textSizeImportant</item>
                <item name="android:layout_marginLeft">5dp</item>
                <item name="android:layout_marginTop">5dp</item>
                
                
                
                </style>
             <style name="myImageView" parent="@style/my_style">                 
            </style>

</resources>